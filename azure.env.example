# Azure App Service Environment Variables
# Copy these to your Azure App Service Configuration

# Application Settings
NODE_ENV=production
WEBSITE_NODE_DEFAULT_VERSION=~22
WEBSITE_NPM_DEFAULT_VERSION=8.19.2

# Server Configuration
PORT=8080
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=https://your-azure-app.azurewebsites.net

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring
MEMORY_ALERT_THRESHOLD_MB=400
HEAP_USAGE_ALERT_PERCENTAGE=85

# Application Metadata
npm_package_version=1.0.0
npm_package_name=simonsays-iot

# Azure Specific
SCM_DO_BUILD_DURING_DEPLOYMENT=true
WEBSITE_DYNAMIC_CACHE=0 